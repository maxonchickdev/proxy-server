{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolvePackageJsonExports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@app/common": [
        "./libs/common/src"
      ],
      "@app/common/*": [
        "./libs/common/src/*"
      ],
      "@app/core": [
        "./libs/core/src"
      ],
      "@app/core/*": [
        "./libs/core/src/*"
      ],
      "@app/modules": [
        "./src/modules"
      ],
      "@app/modules/*": [
        "./src/modules/*"
      ],
      "@prisma/generated": [
        "./prisma/generated"
      ],
      "@prisma/generated/*": [
        "./prisma/generated/*"
      ]
    }
  }
}