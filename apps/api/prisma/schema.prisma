generator client {
  provider = "prisma-client"
  output   = "generated"

  engineType             = "client"
  runtime                = "nodejs"
  moduleFormat           = "cjs"
  generatedFileExtension = "ts"

  previewFeatures = ["postgresqlExtensions", "nativeDistinct"]
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  password  String

  firstName String?
  lastName  String?
}
